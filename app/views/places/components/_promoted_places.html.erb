<section id="portfolio" class="clearfix">
    <div class="container">

      <header class="section-header">
        <h3 class="section-title">Les lieux de la semaine</h3>
      </header>

      <div class="row">
        <div class="col-lg-12">
          <ul id="portfolio-flters">
            <li data-filter=".filter-close">Le plus proche</li>
            <li data-filter=".filter-liked">Le plus apprécié</li>
          </ul>
        </div>
      </div>

      <div class="row portfolio-container">

        <div class="col-lg-6 portfolio-item filter-close">
          <div class="portfolio-wrap">
            <div class="card">
                <%= image_tag "coffee-shop.jpg", class:"d-block w-100 card-img-top" %>
              <div class="card-body">
                  <h5 class="card-title"><%= @places.first.name %></h5>
                <p class="card-text"><%= @places.first.description.truncate(30) %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6 portfolio-item filter-liked">
          <div class="portfolio-wrap">
            <div class="card">
              <%= image_tag "coffee-shop.jpg", class:"d-block w-100 card-img-top" %>
              <div class="card-body">
                  <h5 class="card-title"><%= @places.last.name %></h5>
                <p class="card-text"><%= @places.last.description.truncate(30) %></p>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
  </section>