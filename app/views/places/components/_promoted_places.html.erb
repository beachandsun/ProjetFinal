<section id="portfolio" class="clearfix">
    <div class="container">

      <header class="section-header">
        <h3 class="section-title">Les lieux de la semaine</h3>
      </header>

      <div class="row">
        <div class="col-lg-12">
          <ul id="portfolio-flters">
            <li data-filter=".filter-close">Le plus proche</li>
            <li data-filter=".filter-liked">Le plus apprécié</li>
          </ul>
        </div>
      </div>

      <div class="row portfolio-container">

        <div class="col-lg-6 portfolio-item filter-close">
          <div class="portfolio-wrap">
            <div class="card">
              <% if place_closer.pictures.attached? %>
                <%= image_tag place_closer.pictures.first, alt: 'picture', class:"d-block w-100 card-img-top"  %>
              <% else %>
                <%= image_tag "coffee-shop.jpg", class:"d-block w-100 card-img-top" %>
              <% end %>
              <div class="card-body">
                  <h5 class="card-title"><%= link_to place_closer.name, place_path(place_closer.id) %></h5>
                <p class="card-text"><%= place_closer.description.truncate(70) %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6 portfolio-item filter-liked">
          <div class="portfolio-wrap">
            <div class="card">
                <% if place_top_fav.pictures.attached? %>
                  <%= image_tag place_closer.pictures.first, alt: 'picture', class:"d-block w-100 card-img-top"  %>
                <% else %>
                  <%= image_tag "coffee-shop.jpg", class:"d-block w-100 card-img-top" %>
                <% end %>
              <div class="card-body">
                  <h5 class="card-title"><%= link_to place_top_fav.name, place_path(place_top_fav.id) %></h5>
                <p class="card-text"><%= place_top_fav.description.truncate(70) %></p>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
  </section>