<section id="show-header" class="clearfix">	
	<div class="container">

		<div class="header-info">
			<h2><%=@place.name%></h2>

			<div>
				<a href="#" class="btn-fav scrollto"><i class="fas fa-heart"></i> Ajouter aux favoris</a>
			</div>
		</div>

	</div>
</section><!-- #intro -->


<section id="about">
	<div class="container">

		<header class="section-header">
			<h3>Découvrir l'endroit</h3><br>
		</header>

		<div class="row about-container mb-5">

			<div class="col-lg-5 content">

				<div class="d-flex justify-content-around">

					<div class="icon-box">
						<div class="icon">
							<% if @place.wifi %>
							<i class="fas fa-wifi"></i>
							<% else %>
							<i class="fas fa-wifi"></i>
							<%end%>
						</div>
					</div>

					<% if @place.e_outlet %>
					<div class="icon-box">
						<div class="icon">
							<i class="fas fa-plug"></i>
						</div>
					</div>
					<%end%>

					<% if @place.access_handi %>
					<div class="icon-box">
						<div class="icon">
							<i class="fas fa-wheelchair"></i>
						</div>
					</div>
					<%end%>

				</div>

				<div class="d-flex justify-content-around">

					<% if @place.price %>
					<span class="badge badge-pill badge-primary"><i class="fas fa-euro-sign"></i></span>
					<%else%>
					<span class="badge badge-pill badge-primary"><i class="fas fa-euro-sign"></i><i
							class="fas fa-euro-sign"></i><i class="fas fa-euro-sign"></i></span>
					<%end%>

					<span class="badge badge-pill badge-primary"><i class="fas fa-music"></i> <%= @place.vibe %></span>

					<% if @place.vegan %>
					<span class="badge badge-pill badge-primary">vegan</span>
					<%end%>
				</div>

			</div>

			<div class="col-lg-7 content">
				<p> <%= @place.description %> </p>
			</div>

		</div>

		<div class="row mt-3">

			<div class="col-lg-7 content">
				<%= url_map.html_safe %>
			</div>

			<div class="col-lg-5 content aside-header">
				<h4>Se rendre à <%=@place.name%> :</h4>
				<p>Contacter l'établissement : 0<%= @place.phone_number %></p>
				<p><%= @place.access %></p>
			</div>
		</div>

		<div class="row w-100 mt-5 ml-4 d-flex justify-content-end">
				<a href="#" class="btn-edit scrollto">Modifier les informations</a>
				<a href="#" class="btn-delete scrollto">Supprimer ce lieu</a>
		</div>

	</div>
</section>

<section>
	<div class="container mt-4">
		<div class="row">
			<div>
				<h3>Les photos de cet endroit</h3>
				<%if @place.pictures.attached?%>
					<%@place.pictures.each do |pic|%>
						<%= image_tag pic, alt: 'picture' %>
					<%end%>
				<%else%>
					<p>========== Il n'y a pas encore de photos de cet endroit =========</p>
					<p>==== Vous avez pris des photos lors de votre dernière visite ? ====</p>
					<p>======== Postez les pour donner envie aux utilisateurs ! ========</p>
				<%end%>

				<h3>Vous souhaitez ajouter des photos ?</h3>
				<%= form_tag place_pictures_path(@place), multipart: true do %>
				<%= file_field_tag :pictures, :multiple => true %>
				<%= submit_tag "mettre à jour" %>
				<% end %>
			</div>
		</div>
	</div>
</section>